%p#notice= notice
%h1 Trips
%table
  %thead
    %tr
      %th Driver
      %th Source
      %th Destination
      %th Departure time
      %th Number of seats
      %th{:colspan => "3"}
  %tbody
    - @trips.each do |trip|
      %tr
        %td= trip.driver
        %td= trip.source
        %td= trip.destination
        %td= trip.departure_time
        %td= trip.number_of_seats
        %td= link_to 'Show', trip
        %td= link_to 'Edit', edit_trip_path(trip)
        %td= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Trip', new_trip_path
